<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/android_tela_principal_branca"
        android:id="@+id/telaBranca"
        android:layout_below="@+id/buipost_icon"
        android:layout_centerHorizontal="true" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/botao_fechar"
        android:layout_width="@dimen/tamanho_botao"
        android:layout_height="@dimen/tamanho_botao"
        android:background="@drawable/fechar"
        android:layout_gravity="bottom|end"
        android:layout_below="@+id/telaBranca"
        android:layout_alignRight="@+id/telaBranca"
        android:layout_alignEnd="@+id/telaBranca"
        android:onClick="registarFechar"
        android:src="@drawable/ic_close_black_24dp"

        app:backgroundTint="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Registrar"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView"
        android:layout_above="@+id/editText"
        android:layout_toLeftOf="@+id/botao_go_registrar"
        android:layout_toStartOf="@+id/botao_go_registrar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/textEmailTelaRegistrar"
        android:textColor="@color/primary_dark"
        android:ems="10"
        android:hint="Email"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/primary_dark"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textSenha_Registrar"
        android:layout_alignStart="@+id/textSenha_Registrar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/textSenha_Registrar"
        android:textColor="@color/primary_dark"
        android:hint="Senha"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/primary_dark"
        android:layout_below="@+id/textEmailTelaRegistrar"
        android:layout_toLeftOf="@+id/botao_fechar"
        android:layout_toStartOf="@+id/botao_fechar" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/textSenha_Registrar_Repeat"
        android:inputType="textPassword"
        android:textColor="@color/primary_dark"
        android:hint="Digite novamente "
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/primary_dark"
        android:layout_below="@+id/textSenha_Registrar"
        android:layout_alignLeft="@+id/textSenha_Registrar"
        android:layout_alignStart="@+id/textSenha_Registrar" />

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:id="@+id/botao_go_registrar"
        android:background="@color/colorPrimary"
        android:text="Cadastrar"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:layout_above="@+id/botao_fechar"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:id="@+id/buipost_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/editText"
        android:textColor="@color/primary_dark"
        android:ems="10"
        android:hint="Nome "
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/primary_dark"
        android:layout_above="@+id/textEmailTelaRegistrar"
        android:layout_alignLeft="@+id/textEmailTelaRegistrar"
        android:layout_alignStart="@+id/textEmailTelaRegistrar" />

</RelativeLayout>
