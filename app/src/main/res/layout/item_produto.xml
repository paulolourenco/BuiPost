<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:id="@+id/card_view"
        android:layout_gravity="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp"

                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imagem_produto"
                android:layout_toRightOf="@+id/imagem_produto" />

            <ImageView
                android:id="@+id/imagem_produto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#00ffffff"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                android:text="De:"
                android:id="@+id/textView10"
                android:layout_above="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12" />

            <TextView
                android:id="@+id/preco_anterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"

                android:layout_below="@+id/supermercado"
                android:layout_toRightOf="@+id/textView12"
                android:layout_toEndOf="@+id/textView12" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="Supermercado"
                android:id="@+id/textView2"
                android:layout_above="@+id/textView10"
                android:layout_toRightOf="@+id/imagem_produto"
                android:layout_toEndOf="@+id/imagem_produto" />

            <TextView
                android:id="@+id/supermercado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"

                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="ComestÃ­veis"-->
            <!--android:textColor="@android:color/black"-->
            <!--android:textSize="18sp"-->
            <!--android:id="@+id/textView2"-->
            <!--android:layout_above="@+id/textView5"-->
            <!--android:layout_alignLeft="@+id/textView3"-->
            <!--android:layout_alignStart="@+id/textView3" />-->


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                android:text="Por:"
                android:id="@+id/textView12"
                android:layout_alignBottom="@+id/imagem_produto"
                android:layout_alignLeft="@+id/supermercado"
                android:layout_alignStart="@+id/supermercado" />

            <TextView
                android:id="@+id/precoatual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"

                android:layout_alignBaseline="@+id/textView12"
                android:layout_alignBottom="@+id/textView12"
                android:layout_alignLeft="@+id/preco_anterior"
                android:layout_alignStart="@+id/preco_anterior"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>